<UserControl x:Class="DndCharacterApp.UserInterface.TabDruid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndCharacterApp.UserInterface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--1st-->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                <Label Content="1st Level" VerticalAlignment="Center"/>
                <Button Content="Druidic" Margin="10"/>
                <Button Content="Spellcasting" Margin="10"/>
            </StackPanel>
            <!--2nd-->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <Label Content="2nd Level" VerticalAlignment="Center"/>
                <Button Content="Wild Shape" Margin="10"/>
                <Button Content="Druidic Circle" Margin="10"/>
                <Button Content="Wild Companion" Margin="10"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" Height="50" Grid.Row="1">
            <Label Content="Spell Slots: " FontSize="20" VerticalAlignment="Center"/>
            <Label Content="         "/>
            <StackPanel Orientation="Vertical">
                <Label Content="Cantrip" FontSize="20" Padding="0"/>
                <Label Content="1" FontSize="20" Padding="0" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label Content="         "/>
            <StackPanel>
                <Label Content="1st" FontSize="20" Padding="0"/>
                <Label Content="1" FontSize="20" Padding="0" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label Content="         "/>
            <StackPanel>
                <Label Content="2nd" FontSize="20" Padding="0"/>
                <Label Content="1" FontSize="20" Padding="0" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label Content="         "/>
            <StackPanel>
                <Label Content="3rd" FontSize="20" Padding="0"/>
                <Label Content="1" FontSize="20" Padding="0" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label Content="         "/>
            <StackPanel>
                <Label Content="4th" FontSize="20" Padding="0"/>
                <Label Content="1" FontSize="20" Padding="0" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label Content="         "/>
            <StackPanel>
                <Label Content="5th" FontSize="20" Padding="0"/>
