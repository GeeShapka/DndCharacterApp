													<Border Classes="Simple" Grid.Row="1">
														<StackPanel>
															<Grid>
																<Grid.ColumnDefinitions>
																	<ColumnDefinition/>
																	<ColumnDefinition/>
																</Grid.ColumnDefinitions>
																<Grid.RowDefinitions>
																	<RowDefinition/>
																	<RowDefinition/>
																</Grid.RowDefinitions>

																<!--success-->
																<Label Content="Successes" Grid.Column="0" Grid.Row="0" Classes="Simple" Margin="0" FontSize="8" VerticalAlignment="Center"/>
