									<!--attacks and Charges-->
									<Border Background="LightGray" Margin="5">
										<Border BorderBrush="White" BorderThickness="2" Margin="3">
											<StackPanel>
												<Grid Margin="3, 3, 3, 3">
													<Grid.ColumnDefinitions>
														<ColumnDefinition/>
														<ColumnDefinition Width="0.5*"/>
														<ColumnDefinition/>
														<ColumnDefinition/>
													</Grid.ColumnDefinitions>
													<Grid.RowDefinitions>
														<RowDefinition Height="0.5*"/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
													</Grid.RowDefinitions>

