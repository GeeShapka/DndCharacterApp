													</StackPanel>
												</Border>

												<Grid Grid.Column="2" Grid.Row="1">
													<Grid.RowDefinitions>
														<RowDefinition/>
														<RowDefinition/>
													</Grid.RowDefinitions>

													<!--speed-->
													<Border Classes="Simple" Grid.Row="0">
														<StackPanel>
															<TextBox Classes="Simple" Margin="5, 5, 5, 0" HorizontalContentAlignment="Center"/>
